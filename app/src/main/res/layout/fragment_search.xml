<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="72dp"
    android:paddingTop="@dimen/default_margin"
    tools:context=".Search">


    <TextView
        android:id="@+id/registrationDateTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:text="@string/registration_date_range"
        android:textColor="@color/secondary_text" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search by location"
        android:textColor="@color/primary"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin" />

    <Spinner
        android:id="@+id/locationSpinner"
        style="@style/App_Spinner"
        android:layout_marginLeft="@dimen/default_margin"
        android:spinnerMode="dialog"
        android:prompt="@string/location_spinner_title"/>

    <View
        style="@style/App_Divider"
        android:layout_marginTop="@dimen/default_margin"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search by day of week"
        android:textColor="@color/primary"
        android:layout_marginTop="@dimen/default_margin"
        android:layout_marginLeft="@dimen/default_margin"  />

    <Spinner
        android:id="@+id/dayOfWeekSpinner"
        style="@style/App_Spinner"
        android:layout_marginLeft="@dimen/default_margin"/>

    <View
        style="@style/App_Divider"
        android:layout_marginTop="@dimen/default_margin"/>

    <android.support.v7.widget.CardView
        android:id="@+id/searchButton"
        style="@style/App_CardLayout_Button"
        android:layout_width="wrap_content"
        android:layout_height="36dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textView"
                style="@style/App_Button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/searchButton" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>

















