<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="72dp"
    tools:context=".LibrariesFragment">

    <Spinner
        android:id="@+id/locationSpinner"
        style="@style/App_Spinner"
        android:layout_marginLeft="@dimen/default_margin" />


    <View
        style="@style/App_Divider"
        android:paddingLeft="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_margin"
        android:orientation="vertical">


        <FrameLayout
            android:id="@+id/librariesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </FrameLayout>

        <ListView
            android:id="@+id/libraryHoursListView"
            android:layout_width="match_parent"
            android:clickable="true"
            android:scrollbars="none"
            android:layout_height="300dp"
            android:layout_weight="1" />

        <android.support.v7.widget.CardView
            android:id="@+id/findTestButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_below="@+id/button2"
            android:layout_gravity="center"
            android:layout_marginLeft="-16dp"
            android:layout_marginTop="32dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            card_view:cardBackgroundColor="@color/accent"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="1dp">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:gravity="center"
                    android:minWidth="88dp"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:singleLine="true"
                    android:text="@string/find_test"
                    android:textColor="@android:color/white" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>