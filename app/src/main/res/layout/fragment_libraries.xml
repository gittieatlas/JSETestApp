<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="72dp"
    android:paddingTop="16dp"
    tools:context=".LibrariesFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Search for a Library"
        android:textColor="@color/primary"
        android:layout_marginLeft="@dimen/default_margin"
        />
    <Spinner
        android:id="@+id/locationSpinner"
        style="@style/App_Spinner"
        android:layout_marginLeft="@dimen/default_margin"/>
    <View
        style="@style/App_Divider"
        android:layout_marginTop="@dimen/default_margin"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="@dimen/default_margin"
        android:id="@+id/libraryInfoLinearLayout">


        <FrameLayout
            android:id="@+id/librariesContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </FrameLayout>

        <ListView
            android:id="@+id/libraryHoursListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:clickable="false"
            android:dividerHeight="0dp"
            android:divider="@null"/>

        <android.support.v7.widget.CardView
            android:id="@+id/findTestButton"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginLeft="-16dp"
            style="@style/App_CardLayout_Button">

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/find_test"
                    style="@style/App_Button"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>


</LinearLayout>