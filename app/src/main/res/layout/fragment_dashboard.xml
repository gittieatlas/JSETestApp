<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".DashboardFragment"
    android:paddingBottom="72dp"
    android:paddingTop="@dimen/default_margin">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/default_margin"
        android:orientation="vertical">

        <TextView
            android:id="@+id/locationTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/primary" />

        <FrameLayout
            android:id="@+id/dashboardContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </FrameLayout>

        <ListView
            android:id="@+id/libraryHoursListView"
            android:layout_width="match_parent"
            android:scrollbars="none"
            android:layout_height="300dp"
            android:layout_weight="1"
            android:layout_marginTop="@dimen/default_margin"
            android:dividerHeight="0dp"
            android:divider="@null"/>
        <View
            style="@style/App_Divider"
            android:layout_marginTop="@dimen/default_margin" />

        <LinearLayout
            android:id="@+id/alertsLinearlayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/alertsTitleTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin"
                android:text="@string/alerts"
                android:textColor="@color/primary" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/default_margin">


                <TextView
                    android:id="@+id/alertsDayTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_weight="1"
                    android:text="@string/alerts_day"
                    android:textColor="@color/primary_text"/>


                <TextView
                    android:id="@+id/alertsDateTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_weight="1"
                    android:text="@string/alerts_date"
                    android:textColor="@color/primary_text"/>


                <TextView
                    android:id="@+id/alertsTimeTextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/default_margin"
                    android:layout_weight="2"
                    android:gravity="right"
                    android:text="@string/alerts_time"
                    android:textColor="@color/primary_text" />

            </LinearLayout>

            <TextView
                android:id="@+id/AlertsMessageTextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/alerts_message"
                android:textColor="@color/secondary_text" />

            <View
                style="@style/App_Divider"
                android:layout_marginTop="@dimen/default_margin" />
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/findTestButton"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/button2"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="@color/accent"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="1dp">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:minWidth="88dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:singleLine="true"
                android:text="@string/find_test"
                android:textColor="@android:color/white"/>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>



