<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="actionMenuTextColor">@style/MyActionBarTitleText</item>
        <item name="actionModeBackground">@color/primary</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="MyActionBarTitleText" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/primary_text</item>
    </style>

    <style name="TabBar" parent="Widget.Design.TabLayout">
        <item name="tabBackground">@drawable/tab_layout_background</item>
    </style>

</resources>
